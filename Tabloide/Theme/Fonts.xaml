<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Tabloide.Theme.Fonts">
    <OnPlatform x:Key="FontIcon" x:TypeArguments="x:String">
        <On Platform="Android" Value="Material-Icons.ttf#Material Icons" />
        <On Platform="iOS" Value="Material Icons" />
    </OnPlatform>
    <OnPlatform x:Key="FontBrand" x:TypeArguments="x:String">
        <On Platform="Android" Value="Font-Awesome-5-Brands.ttf#Font Awesome 5 Brands" />
        <On Platform="iOS" Value="Font Awesome 5 Brands" />
    </OnPlatform>
    <OnPlatform x:Key="FontRegular" x:TypeArguments="x:String">
        <On Platform="Android" Value="Roboto-Regular.ttf#Roboto" />
        <On Platform="iOS" Value="Roboto-Regular" />
    </OnPlatform>
    <OnPlatform x:Key="FontMedium" x:TypeArguments="x:String">
        <On Platform="Android" Value="Roboto-Medium.ttf#Roboto Medium" />
        <On Platform="iOS" Value="Roboto-Medium" />
    </OnPlatform>
    <OnPlatform x:Key="FontBold" x:TypeArguments="x:String">
        <On Platform="Android" Value="Roboto-Bold.ttf#Roboto Bold" />
        <On Platform="iOS" Value="Roboto-Bold" />
    </OnPlatform>
</ResourceDictionary>